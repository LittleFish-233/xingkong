                          x:Name="re4"
                          Margin="10,0,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Checked="re4_Checked"
                          GroupName="youxi"
                          Background="Gray"
                          pu:RadioButtonHelper.BoxHeight="18"
                          pu:RadioButtonHelper.BoxWidth="18"
                          pu:RadioButtonHelper.CheckedBackground="Black"/>
            </Grid>
            <Grid Height="60" Margin="10,290,10,0"
              HorizontalAlignment="Stretch" Visibility="Hidden"
                                   x:Name="gr5"
              VerticalAlignment="Top">
                <Rectangle 
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" Fill="White"/>
                <TextBlock Text="&#xE74C;" FontSize="30"
                       FontFamily="Segoe MDL2 Assets"
                       Margin="45,15,0,0"/>
