                    Text="1.12.2原版"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="100,0,0,0"/>
                <RadioButton  Height="30"
                          x:Name="re5"
                          Margin="10,0,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Checked="re5_Checked"
                          GroupName="youxi"
                          Background="Gray"
                          pu:RadioButtonHelper.BoxHeight="18"
                          pu:RadioButtonHelper.BoxWidth="18"
                          pu:RadioButtonHelper.CheckedBackground="Black"/>
            </Grid>

            <Button
            x:Name="re6"
            Click="Button_Click"
            Margin="0,0,10,15"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Width="80" Height="30"
                Content="刷新"/>

        </Grid>
    </Grid>
</Page>
